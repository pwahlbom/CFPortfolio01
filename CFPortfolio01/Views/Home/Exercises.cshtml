                                    <div class="col-md-6">
                                        <input type="text" placeholder="Enter a string" id="mathInput4_1" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <button id="btnMath4_1" class="btn btn-success">Calculate</button>
                                    </div>
                                    <div class="col-md-9">
                                        <button id="btnMath4_2" class="btn btn-success">Clear</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <p id="mathOutput4">Math output</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>