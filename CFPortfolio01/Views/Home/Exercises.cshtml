<!-- JavaScript Modal -->
<div id="mdlJavaScriptExercises" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">JavaScript Exercises</h4>
            </div>
            <br />

            <div class="container">

                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#JSexercise1">Exercise 1</a></li>
                    <li><a data-toggle="tab" href="#JSexercise2">Exercise 2</a></li>
                    <li><a data-toggle="tab" href="#JSexercise3">Exercise 3</a></li>
                    <li><a data-toggle="tab" href="#JSexercise4">Exercise 4</a></li>
                </ul>

                <div class="tab-content">
                    <div id="JSexercise1" class="tab-pane fade in active">

                        <div class="row">
                            <div class="col-md-12">
                                <h5>Enter a number in each box below, and I will perform some math wizardy for you:</h5>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="row">
                                    <div class="col-md-6">Number 1:</div>
                                    <div class="col-md-6">
                                        <input type="number" placeholder="Enter number 1" id="mathInput1_1" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        Number 2:
                                    </div>
                                    <div class="col-md-6">
                                        <input type="number" placeholder="Enter number 2" id="mathInput1_2" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        Number 3:
                                    </div>
                                    <div class="col-md-6">
                                        <input type="number" placeholder="Enter number 3" id="mathInput1_3" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        Number 4:
                                    </div>
                                    <div class="col-md-6">
                                        <input type="number" placeholder="Enter number 4" id="mathInput1_4" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        Number 5:
                                    </div>
                                    <div class="col-md-6">
                                        <input type="number" placeholder="Enter number 5" id="mathInput1_5" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <button id="btnMath1_1" class="btn btn-success">Calculate</button>
                                    </div>
                                    <div class="col-md-9">
                                        <button id="btnMath1_2" class="btn btn-success">Clear</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <p id="mathOutput1">Math output</p>
                            </div>
                        </div>
                    </div>

                    <div id="JSexercise2" class="tab-pane fade">
                        <div class="row">
                            <div class="col-md-12">
                                <h5>Give me a number, and I will tell you the factorial of that number:</h5>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="row">
                                    <div class="col-md-6">Number:</div>
                                    <div class="col-md-6">
                                        <input type="number" placeholder="Enter a number" id="mathInput2_1" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <button id="btnMath2_1" class="btn btn-success">Calculate</button>
                                    </div>
                                    <div class="col-md-9">
                                        <button id="btnMath2_2" class="btn btn-success">Clear</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <p id="mathOutput2">Math output</p>
                            </div>
                        </div>
                    </div>

                    <div id="JSexercise3" class="tab-pane fade">
                        <div class="row">
                            <div class="col-md-12">
                                <h5>Give me any two numbers. I will exam each number between 1 and 100 and for each number that is a multiple of only YOUR first number I will report "Fizz". If a multiple of only YOUR second number, then "Buzz". If a multiple of both, then FizzBuzz. Otherwise I will just report the current number.</h5>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="row">
                                    <div class="col-md-6">Number 1:</div>
                                    <div class="col-md-6">
                                        <input type="number" placeholder="Enter number 1" id="mathInput3_1" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        Number 2:
                                    </div>
                                    <div class="col-md-6">
                                        <input type="number" placeholder="Enter number 2" id="mathInput3_2" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <button id="btnMath3_1" class="btn btn-success">Calculate</button>
                                    </div>
                                    <div class="col-md-9">
                                        <button id="btnMath3_2" class="btn btn-success">Clear</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <p id="mathOutput3">Math output</p>
                            </div>
                        </div>
                    </div>

                    <div id="JSexercise4" class="tab-pane fade">

                        <div class="row">
                            <div class="col-md-12">
                                <h5>Give me any string, and I will tell you if it is a palendrone:</h5>
                            </div>
                        </div>

